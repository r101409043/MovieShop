@model MovieShop.MVC.Models.PurchaseRequestModel

<h2>Buy Movie</h2>

<form asp-action="Purchase" method="post">
    <input type="hidden" asp-for="MovieId"/>
    <input type="hidden" asp-for="UserId"/>

    <div class="form-group">
        <label asp-for="PurchaseDateTime"></label>
        <input asp-for="PurchaseDateTime" class="form-control" type="date"/>
        <span asp-validation-for="PurchaseDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control"/>
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Buy</button>
</form>
